# Database Settings (Async for FastAPI)
DATABASE_URL=sqlite+aiosqlite:///./car_service.db
DB_ECHO=True

# Database Settings (Sync for Alembic)
ALEMBIC_DATABASE_URL=sqlite:///./car_service.db

# JWT Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
RESET_TOKEN_EXPIRE_MINUTES=30

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0
REDIS_USE_SSL=False

# Email Settings (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Frontend Settings
FRONTEND_URL=http://localhost:3000
FRONTEND_SIGNUP_URL=http://localhost:3000/signup

# CORS Settings
ALLOWED_ORIGINS=*
CORS_ALLOW_ALL=True

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=DEBUG
